{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Last_name</th>
                <th>First_name</th>
                <th>Email</th>
                <th>Birthday_date</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.birthdayDate ? user.birthdayDate|date('d-m-Y') : '' }}</td>
                <td>{{ user.active ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}"><i class="bi bi-eye-fill"></i></a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}"><i class="bi bi-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">aucun utilisateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}" class="btn btn-primary">Créer un nouvel utilisateur</a>

{% endblock %}
