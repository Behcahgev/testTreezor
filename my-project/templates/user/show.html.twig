{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Birthday_date</th>
                <td>{{ user.birthdayDate ? user.birthdayDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ user.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}" class="btn btn-secondary"> <i class="bi bi-backspace"></i> back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary"><i class="bi bi-pencil"></i> edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
